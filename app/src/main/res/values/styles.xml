<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackgroundMainActivity">
        <item name="android:background">@color/blue_100</item>
    </style>

    <style name="ButtonMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:textSize">@dimen/dimen_22s</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/dimen_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dimen_8</item>
        <item name="iconTint">@color/grey_100</item>
    </style>

    <style name="BaseTextViewSetting" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_16s</item>
        <item name="android:paddingStart">@dimen/dimen_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextViewSetting" parent="BaseTextViewSetting">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseTextViewSettingHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
        <item name="android:layout_marginStart">@dimen/dimen_60</item>
        <item name="android:textSize">@dimen/dimen_22s</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextViewSettingHeader" parent="BaseTextViewSettingHeader">
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="EditTextSearch">
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:textColorHint">@color/grey_500</item>
    </style>

    <style name="ImageButtonSettingHeader">
        <item name="tint">@color/grey_100</item>
    </style>

    <style name="BaseImageViewSetting">
        <item name="android:layout_width">@dimen/dimen_24</item>
        <item name="android:layout_height">@dimen/dimen_24</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
    </style>

    <style name="ImageViewSetting" parent="BaseImageViewSetting">
        <item name="tint">@color/grey_500</item>
    </style>

    <style name="ImageViewColor">
        <item name="tint">@color/grey_500</item>
    </style>

    <style name="BaseTextViewColor">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewH1Color" parent="BaseTextViewColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewH2Color" parent="BaseTextViewColor">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="BaseTextViewHeaderSearchColor">
        <item name="android:layout_height">@dimen/dimen_22</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/dimen_19s</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeaderSearchColor" parent="BaseTextViewHeaderSearchColor">
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="SwitchSetting">
        <item name="android:thumbTint">@color/grey_500</item>
        <item name="android:trackTint">@color/grey_700</item>
    </style>

    <style name="SwitchSettingMaterial">
        <item name="thumbTint">@color/grey_500</item>
        <item name="trackTint">@color/grey_700</item>
        <item name="android:checked">false</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dimen_102</item>
    </style>

    <style name="BaseTextPlaceHolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:textSize">@dimen/dimen_19s</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextPlaceHolder" parent="BaseTextPlaceHolder">
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="BaseButtonPlaceHolder">
        <item name="android:layout_width">@dimen/dimen_91</item>
        <item name="android:layout_height">@dimen/dimen_36</item>
        <item name="android:layout_marginTop">@dimen/dimen_24</item>
        <item name="android:paddingHorizontal">@dimen/dimen_8</item>
        <item name="cornerRadius">@dimen/dimen_54</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_14</item>
    </style>

    <style name="ButtonPlaceHolder" parent="BaseButtonPlaceHolder">
        <item name="android:backgroundTint">@color/grey_100</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseButtonClearSearchHistory" parent="BaseButtonPlaceHolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/dimen_14</item>
    </style>

    <style name="ButtonClearSearchHistory" parent="BaseButtonClearSearchHistory">
        <item name="android:backgroundTint">@color/grey_100</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseTextViewYSMedium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="BaseTextViewYSMediumOne" parent="BaseTextViewYSMedium">
        <item name="android:textSize">@dimen/dimen_22s</item>
    </style>

    <style name="TextViewYSMediumOneTheme" parent="BaseTextViewYSMediumOne">
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="BaseTextViewYSMediumTwo" parent="BaseTextViewYSMedium">
        <item name="android:textSize">@dimen/dimen_14s</item>
    </style>

    <style name="TextViewYSMediumTwoTheme" parent="BaseTextViewYSMediumTwo">
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="BaseTextViewYSMediumThree" parent="BaseTextViewYSMedium">
        <item name="android:textSize">@dimen/dimen_13s</item>
    </style>

    <style name="TextViewYSMediumThreeHeader" parent="BaseTextViewYSMediumThree">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="TextViewYSMediumThreeTheme" parent="BaseTextViewYSMediumThree">
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="BaseTextViewYSMediumTimeTrack" parent="BaseTextViewYSMedium">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/dimen_14s</item>
    </style>

    <style name="TextViewYSMediumTimeTrack" parent="BaseTextViewYSMediumTimeTrack">
        <item name="android:textColor">@color/grey_100</item>
    </style>

</resources>