<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_61"
    android:padding="@dimen/dimen_8">

    <ImageView
        android:id="@+id/image_album_track"
        android:layout_width="@dimen/dimen_45"
        android:layout_height="@dimen/dimen_45"
        android:background="@drawable/shape_image_album"
        android:layout_marginStart="@dimen/dimen_5"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_32"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_marginStart="@dimen/dimen_58"
        android:layout_marginEnd="@dimen/dimen_44">

        <TextView
            android:id="@+id/name_track"
            android:layout_width="match_parent"
            android:textSize="@dimen/dimen_16s"
            style="@style/TextViewH1Color"
            android:text="@string/name_track" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:textSize="@dimen/dimen_11s"
                android:maxWidth="210dp"
                style="@style/TextViewH2Color"
                android:text="@string/name_group" />

            <TextView
                android:id="@+id/inter_punctum"
                android:layout_width="wrap_content"
                android:textSize="@dimen/dimen_11s"
                style="@style/TextViewH2Color"
                android:layout_marginHorizontal="@dimen/dimen_5"
                android:text="@string/inter_punctum" />

            <TextView
                android:id="@+id/length_track"
                android:layout_width="wrap_content"
                android:textSize="@dimen/dimen_11s"
                style="@style/TextViewH2Color"
                android:text="@string/length_track" />

        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/group_name_and_length_track"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/ys_display_regular"-->
<!--            android:textFontWeight="400"-->
<!--            android:maxLines="1"-->
<!--            android:ellipsize="end"-->
<!--            android:textSize="@dimen/dimen_11s"-->
<!--            style="@style/TextViewH2Color"-->
<!--            android:text="@string/name_group_and_length_track" />-->
    </LinearLayout>

    <ImageView
        android:id="@+id/button_track"
        android:layout_width="@dimen/dimen_24"
        android:layout_height="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_12"
        android:layout_gravity="end"
        android:foreground="?attr/selectableItemBackground"
        style="@style/ImageViewColor"
        app:srcCompat="@drawable/ic_arrow_forward" />

</FrameLayout>